{
  "name": "node-dev",
  "private": "true",
  "version": "1.0.0",
  "description": "a node connection to controller dev, support serial port, tcp socket and tcp server",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "author": "yang",
  "license": "ISC",
  "dependencies": {
    "lerna": "^8.2.1",
    "punycode": "^2.3.1",
    "serialport": "^13.0.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "validate-branch-name": "^1.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yangyyou/node-equipment.git"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feat|fix|hotfix|release|perf|refactor|chore)/.+$",
    "errorMsg": "分支命名不规范，请修正!"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
